{
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "respectLatest": true,
  "ignoreTests": true,
  "minimumReleaseAge": null,
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "matchDepNames": [
        "immich"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false
    }
  ],
  "argocd": {
    "fileMatch": [
      "kubernetes/apps/.*\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "deployment.yaml",
      "deployment.yml"
    ]
  },
  "docker-compose": {
    "fileMatch": [
      "docker-compose.yaml",
      "docker-compose.yml"
    ]
  },
  "github-actions": {
    "fileMatch": [
      "^\\.github\\/workflows\\/[^/]+\\.ya?ml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*\\.ya?ml$"
      ],
      "matchStrings": [
        "image:\\s*tag:\\s*(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "immich",
      "versioningTemplate": "semver"
    }
  ]
}
